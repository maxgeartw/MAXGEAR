{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start TailwindCSS",
      "type": "shell",
      "command": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Jekyll Server",
      "type": "shell",
      "command": "bundle exec jekyll serve",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Both (Tailwind + Jekyll)",
      "dependsOn": [
        "Start TailwindCSS",
        "Start Jekyll Server"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}